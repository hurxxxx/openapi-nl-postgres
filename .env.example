# PostgreSQL Natural Language Query Server - Environment Variables
# Copy this file to .env and fill in your values

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4  # Options: gpt-4, gpt-3.5-turbo, etc.

# PostgreSQL Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=your_database_name
POSTGRES_USER=your_database_user
POSTGRES_PASSWORD=your_database_password

# Server Configuration
PORT=8000
HOST=0.0.0.0

# Optional: ChromaDB Configuration (for vector storage)
# CHROMA_PERSIST_DIRECTORY=./chroma_db
# CHROMA_COLLECTION_NAME=vanna_collection
